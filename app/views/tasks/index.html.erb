<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Público?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td>
          <% if task.public == 1 then %>
            Sim
          <% else %>
            Não
          <% end%>
        </td>
        <td><%= link_to 'Show', task %></td>
        <td>
          <% if task.user_id == current_user.id then %>
            <%= link_to 'Edit', edit_task_path(task) %>
          <% end %>
        </td>
        <td>
          <% if task.user_id == current_user.id then %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Task', new_task_path %> | <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>  
